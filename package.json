{
  "name": "blog-jekyll",
  "version": "2.0.0-alpha",
  "description": "![home](./assets/img/home.png)",
  "type": "module",
  "scripts": {
    "build": "npm run jekyll:prod && npm run vite:build",
    "clean": "rm -rf _site/",
    "vite:dev": "vite",
    "vite:build": "vite build",
    "vite:serve": "vite preview",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build:types": "tsc --emitDeclarationOnly",
    "jekyll:prod": "JEKYLL_ENV=production bundle exec jekyll build --future",
    "jekyll:install": "bundle install",
    "jekyll:dev": "bundle exec jekyll serve",
    "postbuild": "tsc moveViteFiles.ts && mv moveViteFiles.js moveViteFiles.cjs && node moveViteFiles.cjs",
    "pubsub": "node ./src/pubsub.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonesrussell/blog.git"
  },
  "keywords": [],
  "author": "Russell Jones <jonesrussell42@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jonesrussell/blog/issues"
  },
  "homepage": "https://github.com/jonesrussell/blog#readme",
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.15.1",
    "@types/node": "^20.14.9",
    "analytics": "^0.6.2",
    "mini-svg-data-uri": "^1.2.3",
    "sass": "^1.77.6",
    "typescript": "^4.1.3",
    "vite": "^5.3.2"
  },
  "dependencies": {
    "node-redis-pubsub": "^5.0.0"
  }
}
